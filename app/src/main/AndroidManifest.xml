<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.MbtiApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_3d_fluency_face_with_monocle"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_3d_fluency_face_with_monocle"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mbti"
        android:usesCleartextTraffic="true"
        tools:targetApi="34">
        <activity
            android:name=".presentation.ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Mbti">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.ui.select.SelectActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.ui.result.SearchResultActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.ui.start.StartActivity"
            android:exported="false" />
    </application>

</manifest>